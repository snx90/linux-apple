#include "s5l8960x.dtsi"
#include <dt-bindings/input/input.h>

/ {
	chosen {
		framebuffer@83ee00000 {
			compatible = "simple-framebuffer";
			reg = <0x8 0x3ee00000 0x0 (1136 * 640 * 4)>;
			width = <640>;
			height = <1136>;
			stride = <(640 * 4)>;
			format = "a8b8g8r8";
		};
	};

	gpio-keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		home {
			label = "Home Button";
			gpios = <&pinctrl 2 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_LEFTMETA>;
		};

		power {
			label = "Power Button";
			gpios = <&pinctrl 3 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_POWER>;
		};

		volume-up {
			label = "Volume Up";
			gpios = <&pinctrl 4 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_VOLUMEUP>;
		};

		volume-down {
			label = "Volume Down";
			gpios = <&pinctrl 5 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_VOLUMEDOWN>;
		};

		mute-switch {
			label = "Mute Switch";
			gpios = <&pinctrl 16 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_MUTE>;
		};
	};

	reserved-memory {
		framebuffer_mem: memory@83ee00000 {
			reg = <0x8 0x3ee00000 0x0 (1136 * 640 * 4)>;
			no-map;
		};
	};
};

&i2c0 {
	status = "okay";

	/* Tristar MUX chip @ 1A */
	/* PMU (chestnut) for display @ 27 */
	/* PWM vibrator @ 38 */
	/* Cirrus Logic CS35L19 amp @ 40 */
	/* LM3534 backlight controller @ 63 */
	/* PMU (d2045) for Oscar, TouchID, BT, audio codec, battery, Lightning/USB, modem @ 74 */
};

&i2c1 {
	status = "okay";

	light-sensor@29 {
		compatible = "amstaos,tsl2581";
		reg = <0x29>;
	};
};

&serial0 {
	status = "okay";
};

&serial1 {
	status = "okay";

	/* Bluetooth chip, probably brcm,bcm4334-bt (needs Oscar pinctrl) */
};

&serial2 {
