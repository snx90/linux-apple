#include "t7000.dtsi"

/ {
	chosen {
		framebuffer@AAAAAAA {
			compatible = "simple-framebuffer";
			reg = <0x8 0x7d0e2000 0x0 (2048 * 1536 * 4)>;
			width = <1536>;
			height = <2048>;
			stride = <(1536 * 4)>;
			format = "a8b8g8r8";
		};
	};

	reserved-memory {
		framebuffer_mem: memory@AAAAAA {
			reg = <0x8 0x7d0e2000 0x0 (2048 * 1536 * 4)>;
			no-map;
		};
	};
};

&system_memory {
	/* The Mini 4 comes with 2 GiB of RAM. */
	reg = <0x8 0 0 0x80000000>;
};
